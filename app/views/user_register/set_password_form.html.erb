<%= form_with url: set_password_path do |f| %>
    <div class="form-row">
        <div class="col-md-6">
            <div class="form-group">
              <%= f.label :password, "Password", :class => 'small mb-1' %>
              <%= f.password_field :password, :class => 'form-control py-4', :placeholder =>  'Enter password' %>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
              <%= f.label :password_confirmation, "Confirm Password", :class => 'small mb-1' %>
              <%= f.password_field :password_confirmation, :class => 'form-control py-4', :placeholder =>  'Confirm password' %>
            </div>
        </div>
    </div>
    <div class="form-group mt-4 mb-0">
    	<%= f.submit "Set password", :class => 'btn btn-primary btn-block' %>
    </div>
<% end %>
<%= content_for :scripts do %>
  <%= javascript_tag do %>
    $('form').on('keyup change paste', 'input, select, textarea', function(){
        $('#alert').slideUp()
    });
  <% end %>
<% end %> 