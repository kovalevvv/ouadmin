<% content_for :header do %>
  <%= t(:set_password) %>
<% end %>
<% content_for :text do %>
 <%= t(:set_password_text) %>
<% end %>
<%= form_with url: set_password_path do |f| %>
    <div class="form-row">
        <div class="col-md-6">
            <div class="form-group">
              <%= f.label :password, t(:label_user_password), :class => 'small mb-1' %>
              <%= f.password_field :password, :class => 'form-control py-4', :placeholder => t(:placeholder_user_password) %>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
              <%= f.label :password_confirmation, t(:label_user_password_confirmation), :class => 'small mb-1' %>
              <%= f.password_field :password_confirmation, :class => 'form-control py-4', :placeholder =>  t(:placeholder_user_password_confirmation) %>
            </div>
        </div>
    </div>
    <div class="form-group mt-4 mb-0">
    	<%= f.submit t(:button_set_password), :class => 'btn btn-primary btn-block' %>
    </div>
<% end %>