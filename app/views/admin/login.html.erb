<% content_for :header do %>
Login
<% end %>
<% content_for :text do %>
<% end %>
<%= form_with url: authorize_path, local: true do |f| %>
    <div class="form-group">
    	<%= f.label :logon, "logon", :class => 'small mb-1' %>
    	<%= f.text_field :logon, :class => 'form-control py-4', :placeholder =>  'Domain\User' %>
    </div>
    <div class="form-group">
    	<%= f.label :password, "Pass", :class => 'small mb-1' %>
    	<%= f.password_field :password, :class => 'form-control py-4' %>
   </div>
    <div class="form-group mt-4 mb-0">
    	<%= f.submit "Login", :class => 'btn btn-primary btn-block' %>
    </div>
<% end %>
